{% extends 'base.html.twig' %}

{% block title %}Editar movimiento{% endblock %}

{% block body %}

    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-9 bg-white rounded my3 p-5">
                <h1>Editar movimiento</h1>
                {{ message |raw}}
                {{ include('movement/_form.html.twig', {'button_label': 'Update'}) }}
                {{ include('movement/_delete_form.html.twig') }}
                {% if is_granted("ROLE_CELLAR") %}
                    <a href="{{ path('movement_list') }}"><i class="fas fa-hand-point-left"> Volver a la lista</i></a>
                {% else %}
                    <a href="{{ path('movement_index') }}"><i class="fas fa-hand-point-left"> Volver a la lista</i></a>
                {% endif %}


            </div>
        </div>
    </div>
{% endblock %}
