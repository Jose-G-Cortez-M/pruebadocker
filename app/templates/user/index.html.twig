{% extends 'base.html.twig' %}

{% block title %}Índice de Empleados{% endblock %}

{% block body %}
    <h1>Índice de Empleados</h1>
    <h3><a href="{{ path('user_new') }}"><i class="fas fa-user-tie"> Registrar un nuevo empleado</i></a></h3>
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Correo</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="far fa-eye"> Vista detallada</i></a>
                    <br>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"> Editar</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
